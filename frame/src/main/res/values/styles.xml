<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/frame_colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/frame_colorPrimary</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/frame_colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/frame_title_name</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/frame_white</item>
        <!-- 去除原生控件获取焦点高亮显示 -->
        <item name="android:defaultFocusHighlightEnabled" tools:targetApi="o">false</item>
        <!-- 适配RTL -->
        <item name="android:textDirection">locale</item>
    </style>
    <!-- loading dialog(加载动画) -->
    <style name="DialogStyle">
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- Dialog底部弹出样式 有黑色背景 -->
    <style name="ActionSheetDialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--全局通知弹窗-->
    <style name="DialogNotificationTop">
        <item name="android:windowIsTranslucent">true</item>
        <!--设置背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置dialog浮与activity上面-->
        <item name="android:windowIsFloating">true</item>
        <!--去掉背景模糊效果-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--去掉边框-->
        <item name="android:windowFrame">@null</item>
    </style>
    <!--全局通知弹窗动画-->
    <style name="DialogNotificationAnimation" parent="@android:style/Animation.Dialog">
        <!-- 进入时的动画 -->
        <item name="android:windowEnterAnimation">@anim/dialog_notification_enter</item>
        <!-- 退出时的动画 -->
        <item name="android:windowExitAnimation">@anim/dialog_notification_exit</item>
    </style>
</resources>